{{#partial "content"}}

    <section>
        <div class="container">

            {{#if username }}
                <h1>Welcome {{ username }}!</h1>
            {{ else }}
                <h1>Welcome People!</h1>
                <form action="/sign-in" method="post">
                    <input type="text" placeholder="What's your username?" name="username">
                    <button>Sign in</button>
                </form>
            {{/if}}
        </div>
    </section>
    <section>
        <div class="entry-list">
            <ul>
                {{#each blogEntry}}
                    <li>
                        <h2>{{ title }}</h2>
                        <p>{{ body }}</p>
                        <form action="/blog/{{ slug }}/vote" method="post">
                            <a href="/detail/{{slug}}"> {{ title }} </a>  ( {{voteCount}} votes) <button>Vote</button>
                        </form>
                    </li>
                {{/each}}
            </ul>
        </div>
    </section>

{{/partial}}

{{> base.hbs}}
