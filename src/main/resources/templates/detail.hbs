{{#partial "content"}}
    <section>
        <h1>{{ blogEntry.title }}</h1>
        <p>{{ blogEntry.dateCreated }}</p>
        <p>{{ blogEntry.body }}</p>

        <form action="/blog/{{ blogEntry.slug }}/edit">
            <button>Edit</button>
        </form>

    </section>
    <section class="entry-comments">
        <div class="container">
            <form action="/blog/{{ blogEntry.slug }}/comment" method="post">
                <input placeholder="Comment here" name="comment">
                <button>Comment!</button>
            </form>
            <h2>Comments</h2>
            <ul>
                {{#each blogEntry.comments}}
                    <li>
                        <h2> {{ creator }} </h2>
                        <p> {{ comment }} </p>
                    </li>
                {{/each}}
            </ul>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}